                  "raw": "{{base_url}}/api/payments/currencies",
                  "host": ["{{base_url}}"],
                  "path": ["api", "payments", "currencies"]
                }
              }
            },
            {
              "name": "Get Price Estimate",
              "description": "Get price estimate for cryptocurrency conversion",
              "request": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\\n  \"amount\": 100,\\n  \"currency_from\": \"USD\",\\n  \"currency_to\": \"BTC\"\\n}"
                },
                "url": {
                  "raw": "{{base_url}}/api/payments/estimate",
                  "host": ["{{base_url}}"],
                  "path": ["api", "payments", "estimate"]
                }
              }
            },
            {
              "name": "Get Minimum Amount",
              "description": "Get minimum payment amount required for currency pair",
              "request": {
                "method": "GET",
                "header": [],
                "url": {
                  "raw": "{{base_url}}/api/payments/minimum-amount?from=USD&to=BTC",
                  "host": ["{{base_url}}"],
                  "path": ["api", "payments", "minimum-amount"],
                  "query": [
                    {
                      "key": "from",
                      "value": "USD",
                      "description": "Source currency"
                    },
                    {
                      "key": "to",
                      "value": "BTC",
                      "description": "Target currency"
                    }
                  ]
                }
              }
            },
            {
              "name": "Get Exchange Rate",
              "description": "Get current exchange rate between two currencies",
              "request": {
                "method": "GET",
                "header": [],
                "url": {
                  "raw": "{{base_url}}/api/payments/exchange-rate?from=USD&to=ETH",
                  "host": ["{{base_url}}"],
                  "path": ["api", "payments", "exchange-rate"],
                  "query": [
                    {
                      "key": "from",
                      "value": "USD",
                      "description": "Source currency"
                    },
                    {
                      "key": "to",
                      "value": "ETH",
                      "description": "Target currency"
                    }
                  ]
                }
              }
            },
            {
              "name": "IPN Webhook",
              "description": "NOWPayments IPN callback endpoint (signature verified)",
              "request": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\\n  \"payment_id\": \"1234567890\",\\n  \"status\": \"finished\",\\n  \"price_amount\": 100,\\n  \"price_currency\": \"USD\",\\n  \"pay_currency\": \"BTC\",\\n  \"received_amount\": \"0.005\",\\n  \"order_id\": \"order_123\"\\n}"
                },
                "url": {
                  "raw": "{{base_url}}/api/payments/webhook",
                  "host": ["{{base_url}}"],
                  "path": ["api", "payments", "webhook"]
                }
              }
            }
          ]
        },
        {
          "name": "Protected Endpoints",
          "description": "Endpoints requiring authentication (Bearer token required)",
          "item": [
            {
              "name": "ðŸŽ¯ Buy Subscription (RECOMMENDED)",
              "description": "Easy way for users to purchase subscription (USDT TRC20 supported)",
              "event": [
                {
                  "listen": "test",
                  "script": {
                    "exec": [
                      "if (pm.response.code === 200) {",
                      "  var jsonData = pm.response.json();",
                      "  pm.environment.set('invoice_id', jsonData.data.invoiceId);",
                      "  pm.environment.set('subscription_tier', jsonData.data.subscriptionTier);",
                      "  console.log('Subscription created. Tier:', jsonData.data.subscriptionTier);",
                      "  console.log('Payment URL:', jsonData.data.paymentUrl);",
                      "  console.log('Amount:', jsonData.data.amount, jsonData.data.currency);",
                      "}"
                    ]
                  }
                }
              ],
              "request": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  },
                  {
                    "key": "Authorization",
                    "value": "Bearer {{auth_token}}"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"subscriptionTier\": \"Premium\",\n  \"pay_currency\": \"USDT\"\n}"
                },
                "url": {
                  "raw": "{{base_url}}/api/payments/subscribe",
                  "host": ["{{base_url}}"],
                  "path": ["api", "payments", "subscribe"]
                }
              }
            },
            {
              "name": "Create Payment Invoice",
              "description": "Create a new payment invoice for UI/Invoice flow",
              "event": [
                {
                  "listen": "test",
                  "script": {
                    "exec": [
                      "if (pm.response.code === 200) {",
                      "  var jsonData = pm.response.json();",
                      "  pm.environment.set('invoice_id', jsonData.data.invoiceId);",
                      "  pm.environment.set('order_id', jsonData.data.orderId);",
                      "  console.log('Invoice created. ID:', jsonData.data.invoiceId);",
                      "  console.log('Payment URL:', jsonData.data.paymentUrl);",
                      "}"
                    ]
                  }
                }
              ],
              "request": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  },
                  {
                    "key": "Authorization",
                    "value": "Bearer {{auth_token}}"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\\n  \"price_amount\": 100,\\n  \"price_currency\": \"USD\",\\n  \"pay_currency\": \"BTC\",\\n  \"order_id\": \"order_{{$timestamp}}\",\\n  \"order_description\": \"Premium Subscription Payment\",\\n  \"ipn_callback_url\": \"{{base_url}}/api/payments/webhook\",\\n  \"success_url\": \"{{frontend_url}}/payments/success\",\\n  \"cancel_url\": \"{{frontend_url}}/payments/cancel\",\\n  \"customer_email\": \"{{user_email}}\"\\n}"
                },
                "url": {
                  "raw": "{{base_url}}/api/payments/invoice",
                  "host": ["{{base_url}}"],
                  "path": ["api", "payments", "invoice"]
                }
              }
            },
            {
              "name": "Create Payment Order",
              "description": "Create a new payment order for direct payment flow",
              "event": [
                {
                  "listen": "test",
                  "script": {
                    "exec": [
                      "if (pm.response.code === 200) {",
                      "  var jsonData = pm.response.json();",
                      "  pm.environment.set('payment_id', jsonData.data.paymentId);",
                      "  console.log('Payment order created. ID:', jsonData.data.paymentId);",
                      "  console.log('Wallet Address:', jsonData.data.walletAddress);",
                      "}"
                    ]
                  }
                }
              ],
              "request": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  },
                  {
                    "key": "Authorization",
                    "value": "Bearer {{auth_token}}"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\\n  \"price_amount\": 100,\\n  \"price_currency\": \"USD\",\\n  \"pay_currency\": \"BTC\",\\n  \"order_id\": \"order_{{$timestamp}}\",\\n  \"order_description\": \"Direct Payment for Services\"\\n}"
                },
                "url": {
                  "raw": "{{base_url}}/api/payments/order",
                  "host": ["{{base_url}}"],
                  "path": ["api", "payments", "order"]
                }
              }
            },
            {
              "name": "Get Invoice Status",
              "description": "Get status of a specific payment invoice by invoice ID",
              "request": {
                "method": "GET",
                "header": [
                  {
                    "key": "Authorization",
                    "value": "Bearer {{auth_token}}"
                  }
                ],
                "url": {
                  "raw": "{{base_url}}/api/payments/invoice/{{invoice_id}}",
                  "host": ["{{base_url}}"],
                  "path": ["api", "payments", "invoice", "{{invoice_id}}"]
                }
              }
            },
            {
              "name": "Get Payment Status",
              "description": "Get status of a specific payment by payment ID",
              "request": {
                "method": "GET",
                "header": [
                  {
                    "key": "Authorization",
                    "value": "Bearer {{auth_token}}"
                  }
                ],
                "url": {
                  "raw": "{{base_url}}/api/payments/status/{{payment_id}}",
                  "host": ["{{base_url}}"],
                  "path": ["api", "payments", "status", "{{payment_id}}"]
                }
              }
            },
            {
              "name": "Get Payment by Order ID",
              "description": "Get payment details by order ID",
              "request": {
                "method": "GET",
                "header": [
                  {
                    "key": "Authorization",
                    "value": "Bearer {{auth_token}}"
                  }
                ],
                "url": {
                  "raw": "{{base_url}}/api/payments/order/{{order_id}}",
                  "host": ["{{base_url}}"],
                  "path": ["api", "payments", "order", "{{order_id}}"]
                }
              }
            },
            {
              "name": "Get User Payment History",
              "description": "Get all payment transactions for authenticated user",
              "request": {
                "method": "GET",
                "header": [
                  {
                    "key": "Authorization",
                    "value": "Bearer {{auth_token}}"
                  }
                ],
                "url": {
                  "raw": "{{base_url}}/api/payments/my-payments?page=1&limit=10&status=completed",
                  "host": ["{{base_url}}"],
                  "path": ["api", "payments", "my-payments"],
                  "query": [
                    {
                      "key": "page",
                      "value": "1",
                      "description": "Page number for pagination"
                    },
                    {
                      "key": "limit",
                      "value": "10",
                      "description": "Items per page"
                    },
                    {
                      "key": "status",
                      "value": "completed",
                      "description": "Filter by payment status (optional)"
                    }
                  ]
                }
              }
            }
          ]
        },
