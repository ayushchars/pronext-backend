{
  "info": {
    "_postman_id": "pronext-nowpayments-integration",
    "name": "ProNet NOWPayments Integration",
    "description": "Complete API collection for NOWPayments integration testing with all payment operations and endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "description": "User authentication endpoints for payment operations",
      "item": [
        {
          "name": "Register User",
          "description": "Register a new user account",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "  var jsonData = pm.response.json();",
                  "  pm.environment.set('user_id', jsonData.data.userId);",
                  "  pm.environment.set('user_email', jsonData.data.email);",
                  "  pm.environment.set('otp', jsonData.data.otp);",
                  "  console.log('User registered. OTP:', jsonData.data.otp);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fname\": \"John\",\n  \"lname\": \"Doe\",\n  \"email\": \"john.payment@test.com\",\n  \"password\": \"Password123!\",\n  \"phone\": \"9876543210\",\n  \"address\": \"123 Test Street\",\n  \"role\": \"User\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/register",
              "host": ["{{base_url}}"],
              "path": ["api", "register"]
            }
          }
        },
        {
          "name": "Verify OTP",
          "description": "Verify OTP and get authentication token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "  var jsonData = pm.response.json();",
                  "  pm.environment.set('auth_token', jsonData.data.token);",
                  "  console.log('OTP verified. Token saved.');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\\n  \"email\": \"{{user_email}}\",\\n  \"otp\": \"{{otp}}\"\\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/verify-otp",
              "host": ["{{base_url}}"],
              "path": ["api", "verify-otp"]
            }
          }
        }
      ]
    },
    {
      "name": "Payment Operations",
      "description": "All NOWPayments API operations",
      "item": [
        {
          "name": "Public Endpoints",
          "description": "Endpoints that do not require authentication",
          "item": [
            {
              "name": "Get Available Currencies",
              "description": "Fetch all available cryptocurrencies and payment methods from NOWPayments",
              "request": {
                "method": "GET",
                "header": [],
